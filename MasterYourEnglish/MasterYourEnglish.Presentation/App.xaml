<Application x:Class="MasterYourEnglish.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MasterYourEnglish.Presentation"
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             xmlns:views="clr-namespace:MasterYourEnglish.Presentation.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Theme.Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vms:FlashcardsViewModel}">
                <views:FlashcardsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:TestListViewModel}">
                <views:TestListView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:StatisticsViewModel}">
                <views:StatisticsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:ProfileViewModel}">
                <views:ProfileView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:SavedFlashcardsViewModel}">
                <views:SavedFlashcardsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:FlashcardSessionViewModel}">
                <views:FlashcardSessionView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:SessionResultsViewModel}">
                <views:SessionResultsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:GenerateBundleViewModel}">
                <views:GenerateBundleView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>