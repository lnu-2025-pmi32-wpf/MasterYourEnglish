<UserControl x:Class="MasterYourEnglish.Presentation.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vms:ProfileViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{DynamicResource Accent.PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.OnAccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Profile"
                   FontSize="28" FontWeight="SemiBold"
                   Foreground="{DynamicResource Text.PrimaryBrush}"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <Border Width="180" Height="180" 
                        Background="{DynamicResource Sidebar.BackgroundBrush}"
                        BorderBrush="{DynamicResource Border.PrimaryBrush}"
                        BorderThickness="1" CornerRadius="5"/>

                <TextBlock Text="{Binding FullName}" HorizontalAlignment="Center" 
                           FontSize="18" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Username}" HorizontalAlignment="Center" 
                           FontSize="14" Foreground="Gray"/>
            </StackPanel>

            <StackPanel Grid.Column="1" MaxWidth="600" HorizontalAlignment="Left" Margin="40,0,0,0">
                <TextBlock Text="First Name" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding FirstName}"/>

                <TextBlock Text="Last Name" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding LastName}"/>

                <TextBlock Text="Username" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Username}" 
                         IsReadOnly="True" 
                         Background="{DynamicResource Sidebar.HoverBrush}"/>

                <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Email}" 
                         IsReadOnly="True" 
                         Background="{DynamicResource Sidebar.HoverBrush}"/>

                <Button Content="Save Changes" Style="{StaticResource PrimaryButton}"
                        Command="{Binding SaveChangesCommand}"
                        HorizontalAlignment="Left" MinWidth="150" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>