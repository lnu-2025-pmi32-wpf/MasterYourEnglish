<Window x:Class="MasterYourEnglish.Presentation.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vms:RegisterViewModel}"
        Title="Register" Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource App.BackgroundBrush}">

	<Window.Resources>
		<!-- These styles are 100% identical to your LoginView -->
		<Style TargetType="TextBlock">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Margin" Value="0,0,0,5"/>
			<Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
		</Style>
		<Style TargetType="TextBox">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
			<Setter Property="Margin" Value="0,0,0,15"/>
		</Style>
		<Style TargetType="PasswordBox">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
			<Setter Property="Margin" Value="0,0,0,20"/>
		</Style>
		<Style TargetType="Button" x:Key="PrimaryButton">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="Padding" Value="10"/>
			<Setter Property="Background" Value="{DynamicResource Accent.PrimaryBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource Text.OnAccentBrush}"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style TargetType="Button" x:Key="LinkButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="{DynamicResource Accent.PrimaryBrush}"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>
	</Window.Resources>

	<Grid>
		<StackPanel Margin="30" VerticalAlignment="Center">
			<!-- This is the title from your new design -->
			<TextBlock Text="Sign up to MasterYourEnglish" FontSize="22" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,0,0,25"/>

			<!-- These are the new fields -->
			<TextBlock Text="First name"/>
			<TextBox Text="{Binding FirstName}"/>

			<TextBlock Text="Last Name"/>
			<TextBox Text="{Binding LastName}"/>

			<TextBlock Text="Email"/>
			<TextBox Text="{Binding Email}"/>

			<TextBlock Text="Username"/>
			<TextBox Text="{Binding Username}"/>

			<TextBlock Text="Password"/>
			<PasswordBox x:Name="PasswordBox"/>

			<!-- The "Forgot Password" button is GONE -->

			<!-- The main button is now "Create account" -->
			<Button Content="Create account" Style="{StaticResource PrimaryButton}"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"/>

			<!-- The link button now goes back to Sign in -->
			<Button Content="Already have an account? Sign in" Style="{StaticResource LinkButton}"
                    Command="{Binding ShowLoginCommand}"
                    Margin="0,20,0,0"/>

			<TextBlock Text="{Binding ErrorMessage}" Foreground="Red"
                       HorizontalAlignment="Center" Margin="0,15,0,0"/>
		</StackPanel>
	</Grid>
</Window>