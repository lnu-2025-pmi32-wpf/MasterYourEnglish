<UserControl x:Class="MasterYourEnglish.Presentation.Views.CreateTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vms:CreateTestViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Section Card Style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Form Label Style -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
        </Style>

        <!-- Form Input Style -->
        <Style x:Key="FormInput" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
        </Style>

        <!-- Form ComboBox Style -->
        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Question Type Badge Style -->
        <Style x:Key="TypeBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Background" Value="{DynamicResource Accent.PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6B7280"/>
        </Style>

        <!-- Option Input Style -->
        <Style x:Key="OptionCheckBox" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Create New Test"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{DynamicResource Text.PrimaryBrush}"/>
            <TextBlock Text="Build a custom test with your own questions"
                       FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Test Info & Question Form -->
            <ScrollViewer Grid.Column="0" Margin="0,0,15,0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- Test Details Section -->
                    <Border Style="{StaticResource SectionCard}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="📝 Test Details" Style="{StaticResource SectionHeader}"/>
                            
                            <TextBlock Text="Title" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding Title}" Style="{StaticResource FormInput}"/>

                            <TextBlock Text="Description (optional)" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding Description}" Style="{StaticResource FormInput}" 
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="70"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Topic" Style="{StaticResource FormLabel}"/>
                                    <ComboBox ItemsSource="{Binding AvailableTopics}"
                                              SelectedItem="{Binding SelectedTopic}"
                                              DisplayMemberPath="Name"
                                              Style="{StaticResource FormComboBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Difficulty" Style="{StaticResource FormLabel}"/>
                                    <ComboBox ItemsSource="{Binding AvailableDifficultyLevels}"
                                              SelectedItem="{Binding Difficulty}"
                                              Style="{StaticResource FormComboBox}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Add Question Section -->
                    <Border Style="{StaticResource SectionCard}">
                        <StackPanel>
                            <TextBlock Text="➕ Add Question" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="Question Type" Style="{StaticResource FormLabel}"/>
                            <ComboBox ItemsSource="{Binding AvailableQuestionTypes}"
                                      SelectedItem="{Binding SelectedQuestionType}"
                                      Style="{StaticResource FormComboBox}"/>

                            <TextBlock Text="Question Text" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding NewQuestionText}" Style="{StaticResource FormInput}"
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="70"/>

                            <!-- Options Grid - Show different UI based on question type -->
                            <TextBlock Margin="0,5,0,10">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource FormLabel}">
                                        <Setter Property="Text" Value="Answer Options"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMatching}" Value="True">
                                                <Setter Property="Text" Value="Matching Pairs (Left ↔ Right)"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock FontSize="12" Foreground="Gray" Margin="0,0,0,12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Check the box for correct answer(s)"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMatching}" Value="True">
                                                <Setter Property="Text" Value="Enter pairs: left side matches to right side"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Pair 1 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsOption1Correct}" Style="{StaticResource OptionCheckBox}"
                                          Visibility="{Binding IsNotMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBlock Grid.Column="0" Text="1." VerticalAlignment="Center" FontWeight="Bold"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="1" Text="{Binding Option1}" Style="{StaticResource FormInput}" Margin="0"/>
                                <TextBlock Grid.Column="2" Text="↔" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="3" Text="{Binding Match1}" Style="{StaticResource FormInput}" Margin="0"
                                         Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <!-- Pair 2 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsOption2Correct}" Style="{StaticResource OptionCheckBox}"
                                          Visibility="{Binding IsNotMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBlock Grid.Column="0" Text="2." VerticalAlignment="Center" FontWeight="Bold"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="1" Text="{Binding Option2}" Style="{StaticResource FormInput}" Margin="0"/>
                                <TextBlock Grid.Column="2" Text="↔" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="3" Text="{Binding Match2}" Style="{StaticResource FormInput}" Margin="0"
                                         Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <!-- Pair 3 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsOption3Correct}" Style="{StaticResource OptionCheckBox}"
                                          Visibility="{Binding IsNotMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBlock Grid.Column="0" Text="3." VerticalAlignment="Center" FontWeight="Bold"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="1" Text="{Binding Option3}" Style="{StaticResource FormInput}" Margin="0"/>
                                <TextBlock Grid.Column="2" Text="↔" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="3" Text="{Binding Match3}" Style="{StaticResource FormInput}" Margin="0"
                                         Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <!-- Pair 4 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsOption4Correct}" Style="{StaticResource OptionCheckBox}"
                                          Visibility="{Binding IsNotMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBlock Grid.Column="0" Text="4." VerticalAlignment="Center" FontWeight="Bold"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="1" Text="{Binding Option4}" Style="{StaticResource FormInput}" Margin="0"/>
                                <TextBlock Grid.Column="2" Text="↔" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"
                                           Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Grid.Column="3" Text="{Binding Match4}" Style="{StaticResource FormInput}" Margin="0"
                                         Visibility="{Binding IsMatching, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <Button Content="Add Question" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding AddQuestionCommand}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Column: Questions List -->
            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Questions Header -->
                <Border Grid.Row="0" Background="{DynamicResource Sidebar.BackgroundBrush}" 
                        CornerRadius="8,8,0,0" Padding="15,12" 
                        BorderBrush="{DynamicResource Border.PrimaryBrush}" BorderThickness="1,1,1,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋 Questions" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource Text.PrimaryBrush}"/>
                        <Border Background="{DynamicResource Accent.PrimaryBrush}" CornerRadius="10" 
                                Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding QuestionsList.Count}" FontSize="12" 
                                       FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Questions List -->
                <Border Grid.Row="1" Background="{DynamicResource Sidebar.BackgroundBrush}" 
                        BorderBrush="{DynamicResource Border.PrimaryBrush}" BorderThickness="1,0,1,1"
                        CornerRadius="0,0,8,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                        <ItemsControl ItemsSource="{Binding QuestionsList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource App.BackgroundBrush}" 
                                            BorderBrush="{DynamicResource Border.PrimaryBrush}"
                                            BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <!-- Question Type Badge -->
                                                <Border CornerRadius="4" Padding="6,3" VerticalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#3B82F6"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding QuestionType}" Value="MultipleChoice">
                                                                    <Setter Property="Background" Value="#8B5CF6"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding QuestionType}" Value="Matching">
                                                                    <Setter Property="Background" Value="#F59E0B"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding QuestionType}" FontSize="11" 
                                                               FontWeight="SemiBold" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding Text}" FontSize="14" FontWeight="Medium" 
                                                       TextWrapping="Wrap" Foreground="{DynamicResource Text.PrimaryBrush}"/>
                                            <TextBlock Text="{Binding CorrectAnswer, StringFormat='✓ {0}'}" 
                                                       FontSize="12" Foreground="#10B981" Margin="0,6,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                            Command="{Binding CancelCommand}" Margin="0,0,10,0"/>
                    <Button Content="Save Test" Style="{StaticResource PrimaryButton}" 
                            Command="{Binding SaveTestCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>