<UserControl x:Class="MasterYourEnglish.Presentation.Views.CreateTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vms:CreateTestViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

    <UserControl.Resources>
        <!-- Reusing standard styles for consistency -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{DynamicResource Accent.PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.OnAccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="Gray"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Create New Test"
                   FontSize="28" FontWeight="SemiBold"
                   Foreground="{DynamicResource Text.PrimaryBrush}"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Test Info & New Question Form -->
            <ScrollViewer Grid.Column="0" Margin="0,0,20,0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Test Title" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Title}"/>

                    <TextBlock Text="Description" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Description}" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>

                    <TextBlock Text="Topic" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding AvailableTopics}"
                              SelectedItem="{Binding SelectedTopic}"
                              DisplayMemberPath="Name"/>

                    <TextBlock Text="Difficulty Level" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Difficulty}"/>

                    <Border BorderThickness="0,1.5,0,0" Margin="0,20,0,20"/>

                    <TextBlock Text="Add New Question" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <TextBlock Text="Question Text" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding NewQuestionText}" TextWrapping="Wrap" Height="60"/>

                    <!-- Options Inputs -->
                    <TextBlock Text="Option 1 (Correct Answer?)" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="CorrectOption" IsChecked="{Binding IsOption1Correct}" VerticalAlignment="Center" Margin="0,0,10,15"/>
                        <TextBox Grid.Column="1" Text="{Binding Option1}"/>
                    </Grid>

                    <TextBlock Text="Option 2" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="CorrectOption" IsChecked="{Binding IsOption2Correct}" VerticalAlignment="Center" Margin="0,0,10,15"/>
                        <TextBox Grid.Column="1" Text="{Binding Option2}"/>
                    </Grid>

                    <TextBlock Text="Option 3" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="CorrectOption" IsChecked="{Binding IsOption3Correct}" VerticalAlignment="Center" Margin="0,0,10,15"/>
                        <TextBox Grid.Column="1" Text="{Binding Option3}"/>
                    </Grid>

                    <TextBlock Text="Option 4" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="CorrectOption" IsChecked="{Binding IsOption4Correct}" VerticalAlignment="Center" Margin="0,0,10,15"/>
                        <TextBox Grid.Column="1" Text="{Binding Option4}"/>
                    </Grid>

                    <Button Content="Add Question" Style="{StaticResource PrimaryButton}"
                            Command="{Binding AddQuestionCommand}"
                            HorizontalAlignment="Left" MinWidth="150" Margin="0,10,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Column: Question List & Save -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding QuestionsList.Count, StringFormat='Questions: {0}'}" 
                           Style="{StaticResource LabelStyle}"/>

                <ScrollViewer Grid.Row="0" Margin="0,30,0,0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding QuestionsList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Sidebar.BackgroundBrush}" 
                                        BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Text}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding CorrectAnswer, StringFormat='Answer: {0}'}" 
                                                   FontSize="14" Foreground="Green" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                            Command="{Binding CancelCommand}" Margin="0,10,10,0"/>
                    <Button Content="Save Test" Style="{StaticResource PrimaryButton}" 
                            Command="{Binding SaveTestCommand}" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>