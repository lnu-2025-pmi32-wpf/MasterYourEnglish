<UserControl x:Class="MasterYourEnglish.Presentation.Views.SessionResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vms:SessionResultsViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="{DynamicResource Accent.PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.OnAccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Session Complete!"
                       FontSize="48" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="You knew"
                       FontSize="24"
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <TextBlock Text="{Binding KnownCount}"
                           FontSize="72" FontWeight="Bold"
                           Foreground="{DynamicResource Accent.PrimaryBrush}"/>
                <TextBlock Text="/"
                           FontSize="72" FontWeight="Light"
                           Margin="-10,0,-10,0"/>
                <TextBlock Text="{Binding TotalCount}"
                           FontSize="72" FontWeight="Light"/>
            </StackPanel>

            <TextBlock Text="questions"
                       FontSize="24"
                       HorizontalAlignment="Center"/>

            <Button Content="Finish" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding FinishCommand}"
                    Margin="0,40,0,0"/>

        </StackPanel>
    </Grid>
</UserControl>