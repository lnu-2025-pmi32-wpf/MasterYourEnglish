<Window x:Class="MasterYourEnglish.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MasterYourEnglish.Presentation.Views"
        xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vms:MainViewModel}"
        Title="Master Your English" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:SidebarView Grid.Column="0" 
                           DataContext="{Binding SidebarVm}"/>

        <ContentControl Grid.Column="1" 
                        Content="{Binding CurrentViewModel}"
                        Background="{DynamicResource App.BackgroundBrush}"/>
    </Grid>
</Window>