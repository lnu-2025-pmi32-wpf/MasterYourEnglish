<UserControl x:Class="MasterYourEnglish.Presentation.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vms:SettingsViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

	<UserControl.Resources>
		<Style x:Key="SettingItemStyle" TargetType="Grid">
			<Setter Property="Margin" Value="0,0,0,15"/>
		</Style>

		<Style TargetType="TextBlock" x:Key="LabelStyle">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		<Style TargetType="Control" x:Key="BaseControlStyle">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Grid.Column" Value="1"/>
		</Style>

		<Style TargetType="ComboBox" BasedOn="{StaticResource BaseControlStyle}"/>
		<Style TargetType="CheckBox" BasedOn="{StaticResource BaseControlStyle}">
			<Setter Property="Padding" Value="8,10,8,8"/>
		</Style>

		<Style TargetType="TextBlock" x:Key="ReadOnlyBoxStyle">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
			<Setter Property="Grid.Column" Value="1"/>
			<Setter Property="MinHeight" Value="40"/>
		</Style>
	</UserControl.Resources>

	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Text="Settings"
                   FontSize="28" FontWeight="SemiBold"
                   Foreground="{DynamicResource Text.PrimaryBrush}"
                   Margin="0,0,0,20"/>

		<StackPanel Grid.Row="1" MaxWidth="600" HorizontalAlignment="Left">

			<Grid Style="{StaticResource SettingItemStyle}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Interface Language:" Style="{StaticResource LabelStyle}"/>
				<ComboBox Grid.Column="1">
					<ComboBoxItem IsSelected="True">Eng/Ukr</ComboBoxItem>
				</ComboBox>
			</Grid>

			<Grid Style="{StaticResource SettingItemStyle}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Theme:" Style="{StaticResource LabelStyle}"/>
				<ComboBox Grid.Column="1">
					<ComboBoxItem IsSelected="True">Light</ComboBoxItem>
					<ComboBoxItem>Dark</ComboBoxItem>
				</ComboBox>
			</Grid>

			<Grid Style="{StaticResource SettingItemStyle}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Font size:" Style="{StaticResource LabelStyle}"/>
				<ComboBox Grid.Column="1">
					<ComboBoxItem>12</ComboBoxItem>
					<ComboBoxItem IsSelected="True">14</ComboBoxItem>
					<ComboBoxItem>16</ComboBoxItem>
				</ComboBox>
			</Grid>

			<Grid Style="{StaticResource SettingItemStyle}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Sounds:" Style="{StaticResource LabelStyle}"/>
				<CheckBox Grid.Column="1" Content="On/Off"/>
			</Grid>

			<Grid Style="{StaticResource SettingItemStyle}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Reminders:" Style="{StaticResource LabelStyle}"/>
				<CheckBox Grid.Column="1" Content="On/Off"/>
			</Grid>

			<Grid Style="{StaticResource SettingItemStyle}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="Credits:" Style="{StaticResource LabelStyle}"/>
				<TextBlock Text="" Style="{StaticResource ReadOnlyBoxStyle}"/>
			</Grid>

		</StackPanel>
	</Grid>
</UserControl>