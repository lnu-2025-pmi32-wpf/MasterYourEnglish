<UserControl x:Class="MasterYourEnglish.Presentation.Views.GenerateBundleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vms:GenerateBundleViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{DynamicResource Accent.PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.OnAccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="Gray"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Generate Bundle"
                   FontSize="28" FontWeight="SemiBold"
                   Foreground="{DynamicResource Text.PrimaryBrush}"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Number of cards per topic:" Style="{StaticResource LabelStyle}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Topics}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                               FontSize="16" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding CardCount}" 
                                             FontSize="16" Padding="5" TextAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Min English Level:" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding Levels}" 
                          SelectedItem="{Binding SelectedMinLevel}"/>

                <TextBlock Text="Max English Level:" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding Levels}" 
                          SelectedItem="{Binding SelectedMaxLevel}"/>

                <Button Content="Generate" Style="{StaticResource PrimaryButton}" 
                        Command="{Binding GenerateCommand}" Margin="0,30,0,0"/>

                <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                        Command="{Binding CancelCommand}" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>