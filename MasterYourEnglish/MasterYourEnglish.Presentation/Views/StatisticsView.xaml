<UserControl x:Class="MasterYourEnglish.Presentation.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vms:StatisticsViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

    <UserControl.Resources>
        <Style x:Key="DifficultyTagStyle" TargetType="Border">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="DifficultyTagText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource Text.PrimaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="215"/>
            <Setter Property="Height" Value="250"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter Margin="15"
                                              VerticalAlignment="Top"
                                              HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background"
                                        Value="{DynamicResource Sidebar.HoverBrush}"/>
                                <Setter TargetName="CardBorder" Property="BorderBrush"
                                        Value="{DynamicResource Accent.PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" Text="Statistics"
                   FontSize="28" FontWeight="SemiBold"
                   Foreground="{DynamicResource Text.PrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- Summary Statistics Cards -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <!-- Tests Last 2 Weeks -->
            <Border Style="{StaticResource SummaryCardStyle}">
                <StackPanel>
                    <TextBlock Text="Tests (Last 2 Weeks)" 
                               Foreground="Gray" 
                               FontSize="14"/>
                    <TextBlock Text="{Binding Summary.TestsTakenLast2Weeks, FallbackValue='0'}" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource Accent.PrimaryBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Flashcards Last 2 Weeks -->
            <Border Style="{StaticResource SummaryCardStyle}">
                <StackPanel>
                    <TextBlock Text="Flashcard Sessions (Last 2 Weeks)" 
                               Foreground="Gray" 
                               FontSize="14"/>
                    <TextBlock Text="{Binding Summary.FlashcardSessionsLast2Weeks, FallbackValue='0'}" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource Accent.PrimaryBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Average Score -->
            <Border Style="{StaticResource SummaryCardStyle}">
                <StackPanel>
                    <TextBlock Text="Average Score" 
                               Foreground="Gray" 
                               FontSize="14"/>
                    <TextBlock FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource Accent.PrimaryBrush}"
                               Margin="0,5,0,0">
                        <Run Text="{Binding Summary.AverageScore, StringFormat='{}{0:F1}', FallbackValue='N/A'}"/>
                        <Run Text="%" FontSize="24"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Attempt History Header -->
        <TextBlock Grid.Row="2" Text="Attempt History"
                   FontSize="22" FontWeight="SemiBold"
                   Foreground="{DynamicResource Text.PrimaryBrush}"
                   Margin="0,10,0,10"/>

        <!-- Search and Filter Controls -->
        <Grid Grid.Row="3" Margin="0,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16" Padding="5"
                     MaxWidth="500" HorizontalAlignment="Left" MinWidth="400"
                     VerticalAlignment="Center"/>

            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding SortOptions}"
                      SelectedItem="{Binding SelectedSortOption}"
                      FontSize="16" Padding="5"
                      Margin="10,0,0,0" MinWidth="150" VerticalAlignment="Center"/>
        </Grid>

        <!-- Attempt History ScrollViewer -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <ItemsControl ItemsSource="{Binding AttemptHistory}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource CardButtonStyle}">
                            <StackPanel>
                                <!-- Attempt Type Badge -->
                                <Border Background="{DynamicResource Accent.PrimaryBrush}" 
                                        CornerRadius="3" 
                                        Padding="5,2" 
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,8">
                                    <TextBlock Text="{Binding AttemptType}" 
                                               Foreground="White" 
                                               FontSize="10" 
                                               FontWeight="Bold"/>
                                </Border>
                                
                                <!-- Difficulty + Topic Name (same row) -->
                                <StackPanel Orientation="Horizontal">
                                    <Border Style="{StaticResource DifficultyTagStyle}">
                                        <TextBlock Text="{Binding DifficultyLevel, TargetNullValue='N/A'}" 
                                                   Style="{StaticResource DifficultyTagText}"/>
                                    </Border>
                                    <TextBlock Text="{Binding TopicName, TargetNullValue='General'}" 
                                               Foreground="Gray" 
                                               FontSize="14" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Title -->
                                <TextBlock Text="{Binding Title}" 
                                           FontWeight="SemiBold" 
                                           FontSize="20" 
                                           Margin="0,10,0,0" 
                                           TextWrapping="Wrap"/>
                                
                                <!-- Score -->
                                <TextBlock Margin="0,10,0,0" FontSize="14">
                                    <Run Text="Score: " Foreground="Gray"/>
                                    <Run Text="{Binding Score, StringFormat='{}{0:F1}%', TargetNullValue='N/A'}" 
                                         FontWeight="SemiBold"/>
                                </TextBlock>
                                
                                <!-- Timestamp -->
                                <TextBlock Text="{Binding StartedAt, StringFormat='g'}" 
                                           Foreground="Gray" 
                                           FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>
    </Grid>
</UserControl>