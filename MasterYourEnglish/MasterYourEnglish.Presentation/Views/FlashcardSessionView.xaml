<UserControl x:Class="MasterYourEnglish.Presentation.Views.FlashcardSessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:MasterYourEnglish.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vms:FlashcardSessionViewModel}"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="{DynamicResource App.BackgroundBrush}">

    <UserControl.Resources>
        <Style x:Key="FlashcardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Sidebar.BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border.PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="MinHeight" Value="400"/>
        </Style>

        <!-- Base Session Button Style -->
        <Style TargetType="Button" x:Key="SessionActionBase">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                Effect="{DynamicResource ShadowDepth1}"> <!-- Adding a subtle shadow if available, else it ignores -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value> 
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="KnowButton" BasedOn="{StaticResource SessionActionBase}">
            <Setter Property="Background" Value="#10B981"/> <!-- Emerald 500 -->
        </Style>
        
        <Style TargetType="Button" x:Key="DontKnowButton" BasedOn="{StaticResource SessionActionBase}">
            <Setter Property="Background" Value="#F43F5E"/> <!-- Rose 500 -->
        </Style>
        
        <Style TargetType="Button" x:Key="SaveButton" BasedOn="{StaticResource SessionActionBase}">
            <Setter Property="Background" Value="#F59E0B"/> <!-- Amber 500 -->
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header and Progress -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource Text.PrimaryBrush}">
                <Run Text="Flashcards"/>
                <Run Text=" → " Foreground="Gray"/>
                <Run Text="{Binding SessionTitle}" Foreground="Gray"/>
            </TextBlock>

            <TextBlock Grid.Column="1" Text="{Binding ProgressText}" HorizontalAlignment="Right" 
                       VerticalAlignment="Center" FontSize="16" FontWeight="Medium" Foreground="Gray"/>
        </Grid>

        <Button Grid.Row="1" Command="{Binding FlipCardCommand}" 
                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="CardFront" Style="{StaticResource FlashcardStyle}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="FrontScaleTransform" ScaleX="1"/>
                            </Border.RenderTransform>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding CurrentFlashcard.Word}" FontSize="48" FontWeight="Bold"
                                           TextAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentFlashcard.Transcription}" FontSize="24" Foreground="Gray"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="CardBack" Style="{StaticResource FlashcardStyle}" Visibility="Hidden"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="BackScaleTransform" ScaleX="-1"/>
                            </Border.RenderTransform>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                                <TextBlock Text="{Binding CurrentFlashcard.Definition}" FontSize="32" TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentFlashcard.PartOfSpeech}" FontSize="18" Foreground="Gray"
                                           TextAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="{Binding CurrentFlashcard.Example}" FontSize="18" FontStyle="Italic" TextWrapping="Wrap"
                                           TextAlignment="Center" Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Flip front card to hide it -->
                                        <DoubleAnimation Storyboard.TargetName="FrontScaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="1" To="0"
                                                       Duration="0:0:0.2"/>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CardFront"
                                                                     Storyboard.TargetProperty="Visibility"
                                                                     BeginTime="0:0:0.2">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Hidden</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>

                                        <!-- Show and flip back card -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CardBack"
                                                                     Storyboard.TargetProperty="Visibility"
                                                                     BeginTime="0:0:0.2">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="BackScaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="0" To="1"
                                                       Duration="0:0:0.2"
                                                       BeginTime="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Flip back card to hide it -->
                                        <DoubleAnimation Storyboard.TargetName="BackScaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="1" To="0"
                                                       Duration="0:0:0.2"/>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CardBack"
                                                                     Storyboard.TargetProperty="Visibility"
                                                                     BeginTime="0:0:0.2">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Hidden</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>

                                        <!-- Show and flip front card -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CardFront"
                                                                     Storyboard.TargetProperty="Visibility"
                                                                     BeginTime="0:0:0.2">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="FrontScaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="0" To="1"
                                                       Duration="0:0:0.2"
                                                       BeginTime="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add to Saved" Style="{StaticResource SaveButton}" 
                        Command="{Binding AddToSavedCommand}"/>
                <Button Content="Don't Know" Style="{StaticResource DontKnowButton}" Margin="10,0"
                        Command="{Binding DontKnowCommand}"/>
                <Button Content="Know This" Style="{StaticResource KnowButton}"
                        Command="{Binding KnowCommand}"/>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>